<!DOCTYPE html>
<html class="no-js">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title></title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="" />
    <link
      rel="stylesheet"
      href="https://unpkg.com/98.css"
    >
    <script
      src="https://code.jquery.com/jquery-3.5.1.min.js"
      integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
      crossorigin="anonymous"></script>
    <style>
      body {
        background: #c0c0c0;
      }
      ul {
        position: absolute;
        right: 8px;
        left: 8px;
        bottom: 50px;
        top: 50px;
        overflow-y: scroll;
      }
      ul > li {
        display: flex;
        flex-direction: row;
        border-bottom: 1px solid black;
        padding-bottom: 8px;
        margin-bottom: 8px;
        align-items: flex-start;
      }
      ul > li > img {
        width: 100px;
        height: 100px;
        object-fit: cover;
      }
      ul > li div.info {
        flex: 1;
        display: flex;
        flex-direction: column;
      }

      ul > li div.info > h4 {
        margin: 0;
      }

      ul > li div.info div.meta {
        display: flex;
        flex-direction: row;
      }

      ul > li div.info div.meta > div {
        
        margin-right: 16px;
      }

      li a{
        text-decoration: underline;
        cursor: pointer;
      }
      #bottom-bar {
        position: fixed;
        bottom: 8px;
        right: 8px;
        left: 8px;
        height: 35px;
        display: flex;
        flex-direction: row;
        display: flex;
        flex-direction: row;
        
      }

      .top-bar {
        height: 100px;
      }

      #tree-container {
        position: absolute;
        top: 62px;
        left: 0;
        right: 0;
        bottom: 0;
      }

      #bottom-bar > div {
        display: flex;
        padding-left: 16px;
        padding-right: 16px;
        box-shadow: inset -1px -1px #fff, inset 1px 1px grey, inset -2px -2px #dfdfdf, inset 2px 2px #0a0a0a;
        align-items: center;
      }

      #bottom-bar > div:not(:last-child) {
        margin-right: 8px;
      }

      #bottom-bar > div.fill {
        flex: 1;
      }

      .tree-view li {
        display: flex;
        flex-direction: row;
        align-items: center;
      }

      .tree-view li .info {
        flex: 1;
      }

      .tree-view li .column {
        padding: 5px;
      }
    </style>
  </head>
  <body>
    <div class="top-bar">
      <form action="/entries" method="POST">
        <div class="field-row">
          <label for="name">Name:</label>
          <input id="name" type="text" name="name" />
          <select id="categories" name="category">
            @model.categories.forEach(function (category) {
              <option value="@category.id">@category.name</option>
            })
          </select>
          <button id="add-item">Add item</button>
        </div>
      </form>
      <form action="/categories" method="POST">
        <div class="field-row">
          <label for="category-name">Category:</label>
          <input id="category-name" type="text" name="categoryName" />
          <button id="add-category">Add category</button>
        </div>
      </form>
    </div>
    <div id="tree-container">
      <ul class="tree-view">
        @model.items.forEach(function (item) {
          <li data-ident="@item.id">
            <div class="info">
              <h4>@item.title</h4>
            </div>
            <div class="column">
              @if (item.category) {
                <b>@item.category.name</b>
              } else {
                <b>Missing Category</b>
              }
            </div>
            <div class="column">
              @if (item.isAcquired) {
                <input type="checkbox" id="acquired" class="chk-acquired" data-id="@item.id" checked>  
              } else {
                <input type="checkbox" id="acquired" class="chk-acquired" data-id="@item.id">
              }
              
              <label for="acquired">Acquired</label>
            </div>
            <div class="column">
              <button data-id="@item.id" class="btn-delete">Delete</button>
            </div>
          </li>
        })
      </ul>
    </div>
    <div id="bottom-bar">
      <div id="count"> 
        Count: <div>@model.count</div>
      </div>
      <div class="fill status">
      </div>
    </div>
  </body>
  <script>
    $(".chk-acquired").click(function () {
      const item = $(this);
      const id = item.data("id");

      const value = item.is(":checked");

      fetch("/acquire?id=" + id + "&val=" + value);
    });

    $(".btn-delete").click(function () {
      const item = $(this);
      const id = item.data("id");
      var r = confirm("Are you sure you want to delete?");
      if (!r) {
        return;
      }
      fetch("/delete?id=" + id).then(() => {
        $(`li[data-ident='${id}']`).remove();
      });
    });

    $(function() {
      if (localStorage.getItem('categoryId')) {
          $("#categories option").eq(localStorage.getItem('categoryId')).prop('selected', true);
      }

      $("#categories").on('change', function() {
          localStorage.setItem('categoryId', $('option:selected', this).index());
      });

      $("#name").focus();
    });
  </script>
</html>
